<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.james.movietmdb">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.james.movietmdb.ReportApplication"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieReport">
        <activity android:name="com.james.movietmdb.presentation.views.list.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.james.movietmdb.presentation.views.detail.DetailActivity"/>
    </application>

</manifest>