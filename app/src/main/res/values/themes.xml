<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieReport" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="list_tv_title" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/notosanskr_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textSize">@dimen/list_tv_top_title_text_size</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="list_rv">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">@dimen/list_rv_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/list_rv_margin_horizontal</item>
    </style>

    <style name="item_movie_star">
        <item name="android:layout_marginStart">@dimen/item_movie_iv_star_margin_start</item>
    </style>

    <style name="detail_info_title" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/notosanskr_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="detailRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:colorControlActivated">@color/star_yellow</item>
    </style>
</resources>